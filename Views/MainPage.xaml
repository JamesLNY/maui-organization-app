<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrganizationApp.ViewModels"
             x:Class="OrganizationApp.Views.MainPage">
    <VerticalStackLayout Spacing="15" Margin="20">
        <Label x:Name="Label" Text="Enter a task" FontSize="20" HorizontalOptions="Center"/>
        <Entry x:Name="Task"/>
        <HorizontalStackLayout Spacing="15">
            <DatePicker x:Name="DueDate" MinimumDate="09/07/2024" MaximumDate="06/26/2024"/>
            <Button Text="Submit" Clicked="OnSubmit" Released="OnButtonReleased" Pressed="OnButtonPressed"/>
            <Button Text="Add Template" Clicked="OnSubmit" Released="OnButtonReleased" Pressed="OnButtonPressed"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>