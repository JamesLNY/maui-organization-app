<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrganizationApp.ViewModels"
             x:Class="OrganizationApp.Views.MainPage"
             x:DataType="vm:TasksViewModel">
    <VerticalStackLayout Spacing="15" Padding="20">
        <Label x:Name="Label" Text="Enter a task" FontSize="20" HorizontalOptions="Center"/>
        <Entry x:Name="Task"/>
        <DatePicker x:Name="DueDate"
                    MinimumDate="09/07/2024"
                    MaximumDate="06/26/2024"/>
        <HorizontalStackLayout Spacing="20">
            <Button x:Name="Submit" Text="Submit" Clicked="OnSubmit"/>
            <Button x:Name="Template" Text="Add Template" Clicked="AddTemplate"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>